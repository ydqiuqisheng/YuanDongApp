<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:id="@+id/PDFTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="颜色"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="尺码"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="类型"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="第几件"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <ListView
        android:choiceMode="singleChoice"
        android:id="@+id/SimpleMeasuredList"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:divider="@null" />
    <EditText
        android:id="@+id/simple_advices_monitor"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp"
        android:hint="此处输入意见"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/et_frame_shape"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/simpleSign_out_monitor"
            android:text="退签至上一关"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue_circle_selector"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/simpleSign_off_monitor"
            android:text="签核至下一关"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue_circle_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>