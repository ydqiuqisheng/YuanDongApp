<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnRegisterSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_blue_circle_selector"
            android:padding="15dp"
            android:visibility="gone"
            android:text="样衣登记"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnTakeSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_blue_circle_selector"
            android:padding="15dp"
            android:text="样衣借取"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnQueryRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_green_circle_selector"
            android:padding="15dp"
            android:text="流转查询"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnStokeIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:background="@drawable/btn_green_circle_selector"
            android:padding="15dp"
            android:text="样衣入库"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>