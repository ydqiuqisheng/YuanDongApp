<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/et_frame_shape"
        android:padding="5dp">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                style="?android:attr/textViewStyle"
                android:id="@+id/simpleStyleNo"
                android:padding="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:hint="同一批次的二维码样衣只支持入同一个位置加箱号"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/simple_uuid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_photo"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/simple_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱号"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/simple_ctn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <ListView
        android:id="@+id/lv_simple_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </ListView>
    <Button
        android:id="@+id/bt_simple_upDate"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="确认上传"
        android:layout_width="match_parent"
        android:background="@drawable/btn_blue_circle_selector"
        android:layout_height="wrap_content" />
</LinearLayout>