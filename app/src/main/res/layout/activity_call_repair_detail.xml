<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备名称："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCallRepairEquipmentName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="成本中心："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCallRepairCostCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备编号："
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCallRepairEPCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="出厂编号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCallRepairOutOfFactoryCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备型号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCallRepairEquipmentModel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="资产编号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCallRepairAssetsCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="班组"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/callRepairArea"
            android:background="@drawable/et_frame_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="报修人"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/callRepairPeople"
            android:background="@drawable/et_frame_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <EditText
        android:hint="故障描述"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/callRepairDescription"
        android:background="@drawable/et_frame_shape"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/btCallRepairSubmit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="提交"
        android:layout_width="match_parent"
        android:background="@drawable/btn_blue_circle_selector"
        android:layout_height="wrap_content" />
</LinearLayout>