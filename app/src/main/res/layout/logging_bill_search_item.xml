<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/log_searchGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="班组"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_searchPo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FEPO"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_searchComb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Comb"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_searchSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="尺寸"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_searchQty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="数量"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_searchCP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="客户PO"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>

        <TextView
            android:id="@+id/log_searchState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
    <include layout="@layout/line"/>
</LinearLayout>