<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="框号"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/log_FrameNo"
            android:hint="点击扫描二维码"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/et_frame_shape"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组别"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/log_GroupNo"
            android:hint="点击输入组别"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/et_frame_shape"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天数"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/log_Day"
            android:hint="点击输入查询天数"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/et_frame_shape"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 分 包 信 息 "
            android:background="@color/gray"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/log_EndTest"
            android:hint="尾验未通过包号"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/et_frame_shape"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:duplicateParentState="true"
            android:layout_width="23dp"
            android:text="状态"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_height="match_parent" />
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包号"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEPO"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comb"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尺寸"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/log_cpCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户PO"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/log_bill_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="none"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollbarStyle="outsideInset"
                android:choiceMode="multipleChoice" />
            <ListView
                android:id="@+id/log_client_po"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollbarStyle="outsideInset"
                android:choiceMode="multipleChoice" />
        </LinearLayout>
    <!--</ScrollView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
