<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="490dp"
    android:id="@+id/lv_move_standard"
    android:layout_height="match_parent"
    android:background="@drawable/bg_item">
    <TextView
        android:id="@+id/simple_check_standard"
        android:textSize="14sp"
        android:text="规格"
        android:gravity="center_vertical"
        android:textColor="#527ad8"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />
    <include layout="@layout/line_vertical"/>
    <TextView
        android:id="@+id/simple_check_float"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="允差"
        android:textColor="#527ad8"
        android:textSize="14sp" />
    <include layout="@layout/line_vertical"/>
    <TextView
        android:id="@+id/simple_check_biao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="标准"
        android:textColor="#527ad8"
        android:textSize="14sp" />
    <include layout="@layout/line_vertical"/>
    <TextView
        android:id="@+id/simple_check_size"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="尺码"
        android:textColor="#527ad8"
        android:textSize="14sp" />
</LinearLayout>