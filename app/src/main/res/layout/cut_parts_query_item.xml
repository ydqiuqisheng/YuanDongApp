<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cpQuery_Po"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FEPO"
            android:gravity="center"
            android:layout_weight="0.9"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>

        <TextView
            android:id="@+id/cpQuery_bedNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="裁次"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_Comb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMB"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_Qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数量"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="库位"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="班组"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_Layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="层数"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:id="@+id/cpQuery_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绣印收回"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <include layout="@layout/line"/>
</LinearLayout>