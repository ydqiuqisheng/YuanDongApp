<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <EditText
        android:id="@+id/et_unblockInfo"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包号"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/block_pacNo"
            android:hint="点击扫描"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/et_frame_shape"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp">

        <Spinner
            android:id="@+id/unBind_queryGroup"
            android:background="@drawable/et_frame_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

           />
    </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="包号"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="条码号"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <include layout="@layout/line_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="架号"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="FEPO"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Comb"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Size"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <include layout="@layout/line"/>
    <ListView
        android:choiceMode="singleChoice"
        android:id="@+id/Block_unbindInfo_lv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />
    <Button
        android:id="@+id/blockInfoUnbind"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="提交"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_blue_circle_selector"
        android:layout_height="wrap_content" />
</LinearLayout>