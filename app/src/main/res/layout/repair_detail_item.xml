<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="维修项目："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailItemProject"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:text="项目一"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="维修方法："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailItemMethod"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:text="方法一"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="维修人员："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailItemRepairMan"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:text="XXX"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="维修结果："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailItemResult"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:textSize="22sp"
                android:text="好"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="备注："
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvRepairDetailItemRemark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="22sp"
            android:text="备注"
            android:layout_height="wrap_content" />
    </LinearLayout>
