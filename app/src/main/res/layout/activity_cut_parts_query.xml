<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEPO"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/cpQuery_Po"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_frame_shape"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裁次"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/cpQuery_bedNo"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_frame_shape"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班组"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/cpQuery_group"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_frame_shape"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡号"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/et_QueryCode"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_frame_shape"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/cpQueryByPo"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="查询"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:background="@drawable/btn_blue_circle_selector"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/cpQueryByBarcode"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="扫码查询"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_blue_circle_selector"
            android:layout_height="match_parent" />
    </LinearLayout>
<include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FEPO"
            android:gravity="center"
            android:layout_weight="0.9"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="裁次"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMB"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数量"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="库位"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="班组"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="层数"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <include layout="@layout/line_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绣印收回"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <ListView
        android:choiceMode="singleChoice"
        android:id="@+id/QueryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />
</LinearLayout>