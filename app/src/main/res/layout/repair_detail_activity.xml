<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备名称："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailEquipmentName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="成本中心："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailCostCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备编号："
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvRepairDetailEPCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="出厂编号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailOutOfFactoryCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="设备型号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailEquipmentModel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="资产编号："
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRepairDetailAssetsCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_record"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#3215"
        android:hint="请选择叫修记录"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <!--ImageButto为一个向下的箭头-->
    <ImageButton
        android:id="@+id/ib_showRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_record"
        android:layout_alignRight="@id/tv_record"
        android:layout_alignTop="@id/tv_record"
        android:layout_marginRight="5dip"
        android:background="@android:color/transparent"
        android:src="@drawable/drop" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_Group"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#3215"
            android:hint="请选择产线/组别"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <!--ImageButto为一个向下的箭头-->
        <ImageButton
            android:id="@+id/ib_showGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_Group"
            android:layout_alignRight="@id/tv_Group"
            android:layout_alignTop="@id/tv_Group"
            android:layout_marginRight="5dip"
            android:background="@android:color/transparent"
            android:src="@drawable/drop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etRepairDetailRemark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_frame_shape"
            android:hint="维修超过半小时请输入难点"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <net.huansi.equipment.equipmentapp.widget.HorizontalListView
            android:id="@+id/hlvRepairDetailPicture"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imvRepairDetailPictureAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/icon_add" />
    </LinearLayout>

    <include layout="@layout/line"/>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:id="@+id/lvRepairDetail"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btnRepairDetailStart"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="开始维修"
        android:layout_width="match_parent"
        android:background="@drawable/btn_blue_circle_selector"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    <Chronometer
        android:visibility="gone"
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:gravity="center"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/repairDetailMainActionLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnRepairDetailSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="本地保存"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_green_circle_selector"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRepairDetailCommit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="上传数据"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_blue_circle_selector"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRepairDetailAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="添加明细"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_green_circle_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>